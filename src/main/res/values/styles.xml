<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyRadioButtonTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">@dimen/rb_width</item>
        <item name="android:layout_height">@dimen/rb_height</item>
        <item name="android:textColor">@color/text_color_selector</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/rb_bg_selector</item>
    </style>

    <style name="MyTextViewTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">@dimen/tv_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="MyButtonTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">@dimen/tv_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/btn_text_color_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn3_bg_selector</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="MySecondTextViewTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MyTitleTextViewTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MyEditTextViewTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/et_bg_shape</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="MySecondButtonTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:background">@drawable/btn2_bg_selector</item>
        <item name="android:textColor">@color/btn_text_color_selector</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MySignTextViewTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
